.section{
  padding: 10px 0px;
  margin: 0 20px;
  font-size: 17px;
  line-height: 24px;
  border-bottom: 1px solid #d6cccc;
}
.content{
  margin: 20px 20px;
}
.content textarea{
  width: 100%;
  height: 300px;
  font-size: 17px;
  line-height: 24px;
}
.bottom-bts{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  border-top: 1px solid #f5f1f1;
}
.bottom-bts button{
  margin-bottom: 16px;
}
