.section{
  padding: 10px 0px;
  margin: 0 20px;
  font-size: 17px;
  line-height: 24px;
  border-bottom: 1px solid #d6cccc;
}
.content{
  margin: 20px 20px;
  height: 160px;
}
.content textarea{
  width: 100%;
  font-size: 17px;
  line-height: 24px;
  height: 200px;
}
.bottom-bts{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  text-align: center;
}
.bottom-bts .navigator{
  display: inline-block;
  font-size: 14px;
  color: #39BFB7;
  padding: 20px;
}
.info{
  margin-top: 30px;
  text-align: right;
  padding: 20px;
}

.info .font_count{
  font-size: 12px;
  color: #d6cccc;
}
.info .name{
  margin-top: 6px;
  font-size: 14px;
}
.info .name .phcolor{
  color: #d6cccc;
  font-size: 14px;
}
