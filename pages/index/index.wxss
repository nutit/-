/**index.wxss**/
.swiper-tab{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
}
.swiper-content{
  width: 150px;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
}
.swiper-tab-list{
  display: inline-block;
  font-size: 16px;
  line-height: 30px;
  color: #777777;
}
.on{ color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}

.swiper-box{
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.swiper-box view{
  text-align: center;
}
